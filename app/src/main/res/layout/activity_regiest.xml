<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/login_bar"
        layout="@layout/loginheaderbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_bar"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号注册"
                android:textColor="#4297FC"
                android:textSize="20dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="#4297FC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="7dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号"
                android:textColor="#666666"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/regiest_phone_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:background="@color/transparent"

                android:hint="请输入您的手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:paddingRight="23dp"
                android:singleLine="true"
                android:textColor="@color/statetext"
                android:textColorHint="#B3B3B3"
                android:textSize="13sp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_commit_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#B3B3B3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="7dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="验证码"
                android:textColor="#666666"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/regiest_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:background="@color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingRight="23dp"
                android:singleLine="true"
                android:textColor="@color/statetext"
                android:textColorHint="#B3B3B3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/regiest_get_code"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_commit_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="11sp"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginTop="10dp"
            android:background="#B3B3B3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"

            android:paddingLeft="7dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设置密码"
                android:textColor="#666666"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/regiest_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:background="@color/transparent"
                android:hint="请输入您的密码"
                android:inputType="text"
                android:paddingRight="23dp"
                android:singleLine="true"
                android:textColor="@color/statetext"
                android:textColorHint="#B3B3B3"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/login_show_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="27dp"
                android:src="@drawable/show_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#B3B3B3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="密码长度6-20位，至少包括数字、字母、符号中的两种"
            android:textColor="#B3B3B3"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/regiest_next"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/regiest_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已有账户，"
                android:textColor="@color/color_8080"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="去登陆"
                android:textColor="#4297FC"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即同意"
                android:textColor="#B3B3B3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/user_serve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="《用户服务协议》"
                android:textColor="#0073E8"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/user_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="《用户隐私保护申明》"
                android:textColor="#0073E8"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>