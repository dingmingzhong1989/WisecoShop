<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAFF"
    >


    <include
        android:id="@+id/header"
        layout="@layout/headerbar" />

        <View
            android:layout_below="@+id/header"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <ScrollView
            android:overScrollMode="never"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/order_card_up"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="14dp">

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bluepoint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"

                            android:text="产品名称:"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/order_money_detail_productname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"

                            android:text="省呗现金分期"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="申请人:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_username"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:text="李**"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="手机号:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_userphone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:text="1666789008"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="订单号:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_orderid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:text="CL123344556"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingBottom="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="申请时间:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_appaytime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:text="2018-12-12  10:23"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/order_card_down"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="申请额度:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_maxlimit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="50000"
                            android:textColor="#FF5757"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="分期期限:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_term"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:text="6个月"
                            android:textColor="#FF5757"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingBottom="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="记息方式:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:lineSpacingExtra="5dp"
                            android:text="20118-12-1210:232018-12-1220118-12-1210:232018-12-12 "
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:paddingTop="17dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bluepoint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="订单状态:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_applystate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:text="申请成功"
                            android:textColor="#41BB25"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/card_bg_down"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:text="订单进度:"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/order_money_detail_appaystep"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:lineSpacingExtra="5dp"
                            android:text="20118-12-1210:232018-12-1220118-12-1210:232018-12-12 "
                            android:textColor="#808080"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>




     <com.wiseco.wisecoshop.view.LoadingView
         android:layout_below="@+id/bar"
         android:id="@+id/mLoadingView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true">

     </com.wiseco.wisecoshop.view.LoadingView>
</RelativeLayout>